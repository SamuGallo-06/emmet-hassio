{
  "name": "Emmet Voice Assistant",
  "version": "0.0.1",
  "slug": "emmet",
  "description": "Assistente vocale italiano per Home Assistant con riconoscimento wake word (Hey Doc!) e integrazione con Assist",
  "url": "https://github.com/SamuGallo-06/emmet-hassio",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "devices": ["/dev/snd:/dev/snd:rwm"],
  "audio": true,
  "ingress": true,
  "ingress_port": 5000,
  "panel_icon": "mdi:microphone",
  "options": {
    "wake_word_file": "models/Hey-Doc_it_linux_v3_0_0.ppn",
    "model_file": "models/porcupine_params_it.pv",
    "picovoice_access_key": "",
    "hass_url": "http://supervisor/core",
    "hass_token": "",
    "webui_enable": true,
    "log_level": "INFO",
    "audio_device": "default",
    "calibrate_on_start": false
  },
  "schema": {
    "wake_word_file": "str",
    "model_file": "str",
    "picovoice_access_key": "password",
    "hass_url": "str",
    "hass_token": "password",
    "webui_enable": "bool",
    "log_level": "list(DEBUG|INFO|WARNING|ERROR|CRITICAL)?",
    "audio_device": "str",
    "calibrate_on_start": "bool"
  },
  "image": "ghcr.io/samugallo-06/emmet-{arch}"
}